# $FreeBSD: release/9.0.0/share/skel/dot.cshrc 170119 2007-05-29 22:07:57Z dougb $
#
# .tcshrc - csh resource script, read at beginning of execution by each shell
#
# see also csh(1), environ(7).
#

alias h		history 25
alias j		jobs -l
alias la	ls -a
alias lf	ls -FA
alias ll	ls -lA
alias ls	ls -CFG
alias grep      grep --color

alias tpd	transmission-daemon
alias tpr	transmission-remote
alias trl	"transmission-remote -l | cut -c 1-100"
alias sensors	sysctl dev.cpu.0.temperature

# mpc shortcuts :P
alias c		'mpc pause'
alias x		'mpc play'

# A righteous umask
umask 22

set path = (/sbin /bin /usr/sbin /usr/bin /usr/games /usr/local/sbin /usr/local/bin $HOME/bin)

setenv	EDITOR	vim
setenv	PAGER	less
setenv	BLOCKSIZE	K
setenv	LESS	"-M -I -L"
setenv	BROWSER opera

# localization -- keyboard settings
setenv	LC_CTYPE	sl_SI.ISO8859-2
setenv	LANG		sl_SI.ISO8859-2

if ($?prompt) then
	# An interactive shell -- set some stuff up
	set filec
	set history = 1000
	set savehist = 1000000
	set histfile = /home/jozze/.history
	set mail = (/var/mail/$USER)
	if ( $?tcsh ) then
		bindkey "^W" backward-delete-word
		bindkey -k up history-search-backward
		bindkey -k down history-search-forward
	endif
endif

set autolist
set prompt = '%n$> '

# now we set the colors for the 'ls' command
# from the man page:
# a/A - black/bold black
# b/B - red
# c/C - green
# d/D - brown
# e/E - blue
# f/F - magenta
# g/G - cyan
# h/H - light grey
# x   - default foreground/background
# 
# format is:
# fb
# f -- foreground
# b -- background
# default is
# exfxcxdxbxegedabagacad
# 1. directory
# 2. symbolic link
# 3. socket
# 4. pipe
# 5. executable
# 6. block special
# 7. character special
# 8. executable with setuid bit set
# 9. executable with setgid bit set
# 10. directory writable to others, with sticky bit
# 11. directory writable to others, without sticky bit#

setenv LSCOLORS	Exfxcxdxbxegeaabagacad

# some scientific stuff
